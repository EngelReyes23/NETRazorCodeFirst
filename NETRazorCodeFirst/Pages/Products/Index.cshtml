@page
@model NETRazorCodeFirst.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Product List";
}

<div class="Card">

    <div class="Card-Header">
        <h2 class="Card-Title float-left">Product List</h2>
        <a class="btn btn-primary float-right" asp-page="Create">Create New</a>
    </div>


    <div>
        <form method="post">
            @if (Model.Products.Count() > 0)
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.Products.First().ProductId)</th>
                            <th>@Html.DisplayNameFor(m => m.Products.First().ProductName)</th>
                            <th>@Html.DisplayNameFor(m => m.Products.First().ProductQuantity)</th>
                            <th>@Html.DisplayNameFor(m => m.Products.First().ProductPrice)</th>
                            <th>@Html.DisplayNameFor(m => m.Products.First().DateCreated)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => product.ProductId)</td>
                                <td>@Html.DisplayFor(m => product.ProductName)</td>
                                <td>@Html.DisplayFor(m => product.ProductQuantity)</td>
                                <td>@Html.DisplayFor(m => product.ProductPrice)</td>
                                <td>@Html.DisplayFor(m => product.DateCreated)</td>
                                <td>
                                    <a class="btn btn-primary" asp-page="Edit" asp-route-id="@product.ProductId">Edit</a>
                                    <button class="btn btn-danger" asp-page-handler="Delete" asp-route-id="@product.ProductId" onclick="return confirm('Are you sure you want to delete this product?')">Delete</button>
                                </td>
                           </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-center">No products found.</p>
            }
        </form>
    </div>
</div>
