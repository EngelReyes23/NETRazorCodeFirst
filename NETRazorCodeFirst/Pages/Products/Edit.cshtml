@page
@model NETRazorCodeFirst.Pages.Products.EditModel
@{
    ViewData["Title"] = "Edit Product";
}

<h2>Edit Product</h2>

<form method="post">
    <input type="hidden" asp-for="Product.ProductId" />
    <div class="form-group">
        <label asp-for="Product.ProductName"></label>
        <input asp-for="Product.ProductName" class="form-control" />
        <span asp-validation-for="Product.ProductName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.ProductDescription"></label>
        <input asp-for="Product.ProductDescription" class="form-control" />
        <span asp-validation-for="Product.ProductDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.ProductQuantity"></label>
        <input asp-for="Product.ProductQuantity" class="form-control" />
        <span asp-validation-for="Product.ProductQuantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.ProductPrice"></label>
        <input asp-for="Product.ProductPrice" class="form-control" />
        <span asp-validation-for="Product.ProductPrice" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-page="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}